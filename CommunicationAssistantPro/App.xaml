<Application x:Class="CommunicationAssistantPro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Themes -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Arabic RTL Support -->
            <Style TargetType="Window">
                <Setter Property="FlowDirection" Value="LeftToRight"/>
            </Style>
            
            <!-- Custom Colors - Basra Delight Theme -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#0057B7"/>
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="#E6F0FF"/>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#003E82"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#D4AF37"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#2D3748"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0AEC0"/>
            <SolidColorBrush x:Key="TextDarkBrush" Color="#1A202C"/>
            
            <!-- RTL Support -->
            <FlowDirection x:Key="RTL">RightToLeft</FlowDirection>
        </ResourceDictionary>
    </Application.Resources>
</Application>